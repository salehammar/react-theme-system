{
  "name": "react-theme-system",
  "version": "1.0.0",
  "description": "A comprehensive React theme management system that enforces consistency, supports dark/light mode, and eliminates hardcoded styles",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "theme.config.js",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepare": "npm run build",
    "postinstall": "node bin/generate-types.js",
    "create-theme": "node bin/create-theme.js",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "jest"
  },
  "keywords": [
    "react",
    "theme",
    "design-system",
    "typescript",
    "styled-components",
    "dark-mode",
    "light-mode",
    "design-tokens"
  ],
  "author": "Your Name",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "typescript": "^5.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0"
  },
  "bin": {
    "create-theme": "./bin/create-theme.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/react-theme-system.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/react-theme-system/issues"
  },
  "homepage": "https://github.com/yourusername/react-theme-system#readme"
}
